<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chỉnh sửa thông tin</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/assets/css/phim.css">
</head>

<body>
    <!-- bắt đầu header -->
    <%- include('../products/header'); -%>
        <!-- kết thúc header -->
        <!-- Phim lẻ mới cập nhật -->
        <div class="container-fluid">
            <div class="main one">
                <div class="row">
                <!-- Profile Settings-->
        <div class="col-lg-8 pb-5" style="display: block; margin-left: auto;margin-right: auto;">
            <form action="/users/updateinfor" method="post" class="row" style="padding-top: 6%;">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="color: cornsilk;">Họ & Tên</label>
                        <input class="form-control" type="text" name="userName" id="account-fn" value="<%=userinfor.userName%>" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="color: cornsilk;">Địa chỉ Email</label>
                        <input class="form-control" type="email" name="email" id="account-email" value="<%=userinfor.email%>" disabled="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="color: cornsilk;">Số điện thoại</label>
                        <input class="form-control" type="text" name="phoneNumber" id="account-phone" value="<%=userinfor.phoneNumber%>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="color: cornsilk;">Địa chỉ</label>
                        <input class="form-control" type="text" name="address" id="account-phone" value="<%=userinfor.address%>">
                    </div>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <button class="btn btn-style-1 btn-primary" type="submit" data-toast="" data-toast-position="topRight" data-toast-type="success" data-toast-icon="fe-icon-check-circle" data-toast-title="Success!" data-toast-message="Your profile updated successfuly.">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>
                </div>

            </div>


        </div>
            <script>
                var IP = document.querySelector("#IP");
                var LFF = document.querySelector("#LFF");
                var infor_personal = document.querySelector(".infor-personal");
                var list_favouritefilm = document.querySelector(".list-favouritefilm");
                LFF.addEventListener("click", function(params) {
                    if (infor_personal.style.display == "block") {
                        infor_personal.style.display = "none";
                        infor_personal.style.transition = "10s";
                        if (infor_personal.style.display = "none") {
                            list_favouritefilm.style.display = "block";
                            list_favouritefilm.style.transition = "10s";
                        }
                    }
                })
                IP.addEventListener("click", function(params) {
                    if (list_favouritefilm.style.display == "block") {
                        list_favouritefilm.style.display = "none";
                        infor_personal.style.transition = "10s";
                        if (list_favouritefilm.style.display = "none") {
                            infor_personal.style.display = "block";
                            infor_personal.style.transition = "10s";
                        }
                    }
                })
            </script>
            <%- include('../products/footer'); -%>
</body>

</html>